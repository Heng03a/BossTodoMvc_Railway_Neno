@model BossTodoMvc.Web.ViewModels.EditTodoViewModel

@{
    ViewData["Title"] = "Edit Task";
}

<link rel="stylesheet" href="~/css/todos.css" />

<div class="todo-wrapper">
    <div class="todo-card">

        <h2 class="page-title">Edit Task</h2>

        <form asp-action="Edit" method="post" class="add-form">
            <input type="hidden" asp-for="Id" />

            <input asp-for="Title"
                   class="form-control"
                   placeholder="Update task title..." />

            <span asp-validation-for="Title" style="color:red;"></span>

            <div style="margin-top:15px;">
                <button type="submit" class="btn-primary">
                    Save
                </button>

                <a asp-action="Index" class="btn-delete" style="margin-left:10px; text-decoration:none;">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
