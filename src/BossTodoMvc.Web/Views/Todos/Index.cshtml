@model BossTodoMvc.Web.ViewModels.TodoListViewModel

@{
    ViewData["Title"] = "My Tasks";
}

<div class="container py-4">

    <!-- Title -->
    <h2 class="text-center mb-4">My Tasks</h2>

    <!-- Add Task -->
    <form asp-action="Create" method="post" class="d-flex gap-2 mb-3">
        <input type="text"
               name="title"
               class="form-control"
               placeholder="What do you need to do?"
               required />
        <button class="btn btn-primary px-4">Add</button>
    </form>

    <!-- Filters + Sort -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">

        <!-- Status Filters -->
        <div class="btn-group">
            <a class="btn btn-outline-primary @(Model.Status == "all" ? "active" : "")"
               asp-route-status="all"
               asp-route-sort="@Model.Sort">
                All
            </a>
            <a class="btn btn-outline-primary @(Model.Status == "active" ? "active" : "")"
               asp-route-status="active"
               asp-route-sort="@Model.Sort">
                Active
            </a>
            <a class="btn btn-outline-primary @(Model.Status == "completed" ? "active" : "")"
               asp-route-status="completed"
               asp-route-sort="@Model.Sort">
                Completed
            </a>
        </div>

        <!-- Sort -->
        <form method="get" class="d-flex align-items-center gap-2">
            <label class="small text-muted">Sort</label>
            <select name="sort"
                    class="form-select form-select-sm"
                    onchange="this.form.submit()">
                <option value="newest" selected="@(Model.Sort == "newest")">Newest</option>
                <option value="oldest" selected="@(Model.Sort == "oldest")">Oldest</option>
            </select>

            <input type="hidden" name="status" value="@Model.Status" />
        </form>
    </div>

    <!-- Task List -->
    @if (!Model.Items.Any())
    {
        <div class="alert alert-light text-center">
            No tasks found.
        </div>
    }
    else
    {
        foreach (var item in Model.Items)
        {
            <div class="card mb-2 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">

                    <!-- Task Title -->
                    <div class="d-flex align-items-center gap-2">
                        <span class="@(item.IsCompleted
                            ? "text-decoration-line-through text-muted"
                            : "fw-medium")">
                            @item.Title
                        </span>
                    </div>

                    <!-- Actions -->
                    <div class="btn-group">

                        <a asp-action="Edit"
                        asp-route-id="@item.Id"
                        class="btn btn-sm btn-primary">
                            Edit
                        </a>


                        <!-- Done / Undo -->
                        <form asp-action="Toggle" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button class="btn btn-sm @(item.IsCompleted ? "btn-secondary" : "btn-success")">
                                @(item.IsCompleted ? "Undo" : "Done")
                            </button>
                        </form>

                        <!-- Delete -->
                        <form asp-action="Delete"
                            method="post"
                            onsubmit="return confirm('Delete this task?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        }
    }

</div>
