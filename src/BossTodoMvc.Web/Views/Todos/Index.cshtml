@model IEnumerable<BossTodoMvc.Domain.Entities.TodoItem>

@{
    ViewData["Title"] = "Todo List";
    var sort = Context.Request.Query["sort"].ToString();
}

<link rel="stylesheet" href="~/css/todos.css" />

<div class="todo-wrapper">
    <div class="todo-card">

        <h2 class="page-title">Boss Todo List</h2>

        <!-- SORT DROPDOWN -->
        <div class="top-bar">
            <form method="get">
                <select name="sort" onchange="this.form.submit()">
                    <option value="newest" selected="@(string.IsNullOrWhiteSpace(sort) || sort=="newest")">
                        Newest
                    </option>
                    <option value="oldest" selected="@(sort=="oldest")">Oldest</option>
                    <option value="completed" selected="@(sort=="completed")">Completed</option>
                    <option value="active" selected="@(sort=="active")">Active</option>
                </select>
            </form>
        </div>



        <!-- LEGEND -->
        <div class="legend">
            <div>
                <span class="status-dot status-active"></span> Active
            </div>
            <div>
                <span class="status-dot status-completed"></span> Completed
            </div>
        </div>

        <!-- ADD TASK -->
        <form asp-action="Create" method="post" class="add-form">
        <div class="todo-input-row">
            <input type="text" name="title" placeholder="What do you need to do?" />
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
        </form>

        <!-- LIST -->
        @if (!Model.Any())
        {
            <p class="empty-msg">No tasks yet.</p>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="todo-item">

                    <div class="todo-left">
                        <span class="status-dot @(item.IsCompleted ? "status-completed" : "status-active")"></span>

                        <span class="todo-title @(item.IsCompleted ? "completed-text" : "")">
                            @item.Title
                        </span>
                    </div>

                    <div class="todo-actions">

                        <!-- EDIT -->
                        <a asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn-edit">
                            Edit
                        </a>

                        <!-- DONE -->
                        <form asp-action="Toggle"
                              asp-route-id="@item.Id"
                              method="post">
                            <button type="submit" class="btn-done">
                                @(item.IsCompleted ? "Undo" : "Done")
                            </button>
                        </form>

                        <!-- DELETE -->
                        <form asp-action="Delete"
                              asp-route-id="@item.Id"
                              method="post"
                              onsubmit="return confirm('Delete this task?');">
                            <button type="submit" class="btn-delete">
                                Delete
                            </button>
                        </form>

                    </div>
                </div>
            }
        }

        <div class="logout-area">
            <a href="/Auth/Logout" class="btn-delete">
                Logout
            </a>
        </div>

    </div>
</div>
